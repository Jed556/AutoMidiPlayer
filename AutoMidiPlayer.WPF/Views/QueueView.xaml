<UserControl
    x:Class="AutoMidiPlayer.WPF.Views.QueueView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:s="https://github.com/canton7/Stylet"
    xmlns:viewModels="clr-namespace:AutoMidiPlayer.WPF.ViewModels"
    xmlns:controls="clr-namespace:AutoMidiPlayer.WPF.Controls"
    xmlns:converters="clr-namespace:AutoMidiPlayer.WPF.Converters"
    d:DataContext="{d:DesignInstance Type=viewModels:QueueViewModel}">

    <UserControl.Resources>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar: Search and Actions -->
        <Grid Grid.Row="0"
              Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <controls:SimpleStackPanel Grid.Column="0"
                                       Orientation="Horizontal"
                                       Spacing="4">
                <ui:TextBox PlaceholderText="Filter queue..."
                            Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                            Width="250"
                            Icon="Search12"
                            VerticalAlignment="Center"/>
                <TextBlock Margin="10,0"
                           VerticalAlignment="Center"
                           Opacity="0.7">
                    <Run Text="{Binding Tracks.Count, Mode=OneWay}"/> in queue
                </TextBlock>
            </controls:SimpleStackPanel>

            <controls:SimpleStackPanel Grid.Column="1"
                                       Orientation="Horizontal"
                                       Spacing="4">
                <Button Command="{s:Action RemoveTrack}"
                        Content="Remove"
                        ToolTip="Remove selected from queue"/>
                <Button Command="{s:Action ClearQueue}"
                        Content="Clear Queue"/>
            </controls:SimpleStackPanel>
        </Grid>

        <!-- Track List -->
        <controls:SongListControl x:Name="SongList"
                                  Grid.Row="1"
                                  ItemsSource="{Binding FilteredTracks}"
                                  SelectedItem="{Binding SelectedFile, Mode=TwoWay}"
                                  OpenedFile="{Binding OpenedFile}"
                                  IsPlaying="{Binding Playback.IsPlaying}"
                                  AllowReorder="True"
                                  ItemDoubleClick="TrackList_ItemDoubleClick"
                                  PlayPauseClick="TrackList_PlayPauseClick"
                                  MenuClick="TrackList_MenuClick">
            <controls:SongListControl.ItemContextMenu>
                <ContextMenu>
                    <MenuItem Header="Remove from Queue"
                              Click="RemoveFromQueue_Click">
                        <MenuItem.Icon>
                            <Path Data="{StaticResource RemoveCircleIconGeometry}"
                                  Fill="{DynamicResource TextFillColorPrimaryBrush}"
                                  Stretch="Uniform"
                                  Width="12"
                                  Height="12"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Edit"
                              Click="EditSong_Click"
                              Visibility="{Binding PlacementTarget.IsMultiSelect, RelativeSource={RelativeSource AncestorType=ContextMenu}, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <MenuItem.Icon>
                            <Path Data="{StaticResource EditIconGeometry}"
                                  Fill="{DynamicResource TextFillColorPrimaryBrush}"
                                  Stretch="Uniform"
                                  Width="12"
                                  Height="12"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Delete"
                              Click="DeleteSong_Click">
                        <MenuItem.Icon>
                            <Path Data="{StaticResource DeleteIconGeometry}"
                                  Fill="{DynamicResource TextFillColorPrimaryBrush}"
                                  Stretch="Uniform"
                                  Width="12"
                                  Height="12"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </controls:SongListControl.ItemContextMenu>
        </controls:SongListControl>
    </Grid>
</UserControl>
