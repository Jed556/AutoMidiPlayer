<UserControl x:Class="AutoMidiPlayer.WPF.Controls.HotkeyEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:s="https://github.com/canton7/Stylet"
             xmlns:controls="clr-namespace:AutoMidiPlayer.WPF.Controls"
             x:Name="HotkeyControl">
    <UserControl.Resources>
        <!-- Ghost button style: transparent bg, faded icon, white on hover -->
        <Style x:Key="GhostIconButton"
                TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="6"/>
            <Setter Property="Opacity"
                    Value="0.4"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Opacity"
                            Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Action Name -->
        <TextBlock Grid.Column="0"
                   Text="{Binding HotkeyBinding.DisplayName, ElementName=HotkeyControl}"
                   VerticalAlignment="Center"
                   FontWeight="Medium"/>

        <!-- Hotkey Display / Edit Box -->
        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Margin="8,0"
                    Visibility="{Binding IsNotEditing, ElementName=HotkeyControl, Converter={x:Static s:BoolToVisibilityConverter.Instance}}">
            <ItemsControl ItemsSource="{Binding HotkeyBinding.DisplayParts, ElementName=HotkeyControl}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <!-- Separator "+" between chips -->
                            <TextBlock Text=" + "
                                       VerticalAlignment="Center"
                                       Opacity="0.5"
                                       Margin="0"
                                       Visibility="{Binding IsFirst, Converter={x:Static s:BoolToVisibilityConverter.InverseInstance}}"/>
                            <!-- Key chip -->
                            <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="8,2">
                                <TextBlock Text="{Binding Text}"
                                           VerticalAlignment="Center"
                                           FontSize="12"/>
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Edit mode overlay -->
        <Border Grid.Column="1"
                x:Name="EditBorder"
                Background="{DynamicResource ControlFillColorInputActiveBrush}"
                BorderBrush="{DynamicResource AccentFillColorDefaultBrush}"
                BorderThickness="2"
                CornerRadius="4"
                Padding="8,4"
                Margin="8,0"
                MinWidth="150"
                Visibility="{Binding IsEditing, ElementName=HotkeyControl, Converter={x:Static s:BoolToVisibilityConverter.Instance}}"
                Focusable="True"
                KeyDown="EditBorder_KeyDown"
                PreviewKeyDown="EditBorder_PreviewKeyDown">
            <TextBlock Text="Press keys..."
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Opacity="0.6"
                       FontStyle="Italic"/>
        </Border>

        <!-- Edit Button -->
        <Button Grid.Column="2"
                Click="EditButton_Click"
                Style="{StaticResource GhostIconButton}"
                ToolTip="Edit hotkey"
                Visibility="{Binding IsNotEditing, ElementName=HotkeyControl, Converter={x:Static s:BoolToVisibilityConverter.Instance}}">
            <ui:SymbolIcon Symbol="Edit16"/>
        </Button>

        <!-- Cancel during edit -->
        <StackPanel Grid.Column="2"
                    Orientation="Horizontal"
                    Visibility="{Binding IsEditing, ElementName=HotkeyControl, Converter={x:Static s:BoolToVisibilityConverter.Instance}}">
            <Button Click="CancelEdit_Click"
                    Style="{StaticResource GhostIconButton}"
                    ToolTip="Cancel (Esc)">
                <ui:SymbolIcon Symbol="Dismiss16"/>
            </Button>
        </StackPanel>

        <!-- Clear Button -->
        <Button Grid.Column="3"
                Click="ClearButton_Click"
                Style="{StaticResource GhostIconButton}"
                Margin="4,0,0,0"
                ToolTip="Clear hotkey"
                Visibility="{Binding IsNotEditing, ElementName=HotkeyControl, Converter={x:Static s:BoolToVisibilityConverter.Instance}}">
            <ui:SymbolIcon Symbol="Delete16"/>
        </Button>
    </Grid>
</UserControl>
